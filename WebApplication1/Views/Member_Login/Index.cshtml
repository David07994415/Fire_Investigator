    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">

        <h2 class="page-title">會員登入</h2>
        <hr class="botmargin-min">*@
<!-- 內容開始 -->


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3 class="title-normal">請輸入您的帳號及密碼</h3>


    <div class="form-group">
        @Html.Label("帳　號：", htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { placeholder = "請輸入帳號", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-2">
            @*<span class="alertred"><i class="fa fa-exclamation-circle"></i> 姓名必填</span>*@
        </div>
    </div>


    <div class="form-group">
        @Html.Label("密　碼：", htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "請輸入帳號", @class = "form-control",@type = "password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-2">
            @*<span class="alertred"><i class="fa fa-exclamation-circle"></i> 姓名必填</span>*@
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="登入" class="btn btn-primary solid blank" />
        </div>
    </div>

    <hr>

    <div class="text-left">
        <a href="~/Member_Register/Index">尚未註冊</a>
    </div>

</div>
}

    <!-- Content row 1 end -->
    <!-- 內容結束 -->

