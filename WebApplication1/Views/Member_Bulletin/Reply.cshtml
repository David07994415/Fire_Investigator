@model WebApplication1.Models.ViewModels.CreateBulletinMain
@{
    ViewBag.Title = "Membership";
    ViewBag.PageTitle = "回覆主題留言";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    .ck-editor__editable {
        min-height: 500px;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.theme, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.theme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.theme, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CkConent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.CkConent, 10, 10, new { @class = "form-control", @id = "editor", style = "height: 300px;" })
                @Html.ValidationMessageFor(model => model.CkConent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="回覆" class="btn btn-default" />
            </div>
        </div>

    </div>
}

@section scripts
{
